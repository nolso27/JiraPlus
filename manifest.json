{
    "manifest_version": 3,
  
    "name": "Jira Helper",
    "description": "Provides additinal helpful functionality to Jira",
    "version": "0.0.1",
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "notifications",
      "offscreen"
    ],
    "background": {
      "service_worker": "background.js"
    },

    "web_accessible_resources": [
      {
        "resources": ["audio.html"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "content_scripts": [{
      "js": ["content.js"],
      "matches": ["https://jira.benco.com/issues/?jql=*", "https://jira.benco.com/*"]
      
    }]
    
  }